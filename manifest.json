{
    "manifest_version": 3,
    "name": "Tooltip Copier",
    "version": "1.0.2",
    "description": "Hover to copy tooltip text.",
    "permissions": [
      "clipboardWrite",
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "tooltipcopy_48.png"
    }
  }